<%- include('./partials/header') %>

<div class="form-container">
  <h1>Submit a Complaint</h1>
  
  <form action="/complaints/submit" method="POST" class="complaint-form">
    <div class="form-group">
      <label for="reason">Reason</label>
      <input type="text" id="reason" name="reason" placeholder="E.g., Overflowing bin, Missed collection" required>
    </div>
    
    <div class="form-group">
      <label for="address">Address</label>
      <textarea id="address" name="address" placeholder="Location of the issue" required></textarea>
    </div>
    
    <div class="form-group">
      <label for="description">Description</label>
      <textarea id="description" name="description" placeholder="Please provide details about the issue" required></textarea>
    </div>
    
    <button type="submit" class="btn">Submit Complaint</button>
  </form>
  
  <div class="form-footer">
    <a href="/complaints" class="btn-secondary">Back to Complaints</a>
  </div>
</div>

<%- include('./partials/footer') %>